<div class="container">
    <div class="row content">
        <div class="col-md-6">
            <h3 class="signin-text mb-3">Register</h3>
            <form action="/register" method = "post">
                <div class="mb-3">
                    <label for="name">Full Name</label>
                    <input class="form-control" type="text" name="name" id="name" required>
                </div>
                <div class="mb-3">
                    <label for="email">Email</label>
                    <input class="form-control" type="email" name="email" id="email" required>
                </div>

                <div class="mb-3">
                    <label for="password">Password</label>
                    <input class="form-control" type="password" name="password" id="password" required>
                </div>
                <div class="mb-3">
                    <label for="conpassword">Confirm Password</label>
                    <input class="form-control" type="pasword" name="conpassword" id="conpassword" required>
                </div>
                <div class="mb-3 form-check">
                    <input type="checkbox" name="checkbox" id="" class ="form-check-input" required>
                    <label for="checkbox">Terms and Conditions</label>
                </div>
                <div class ="d-grid gap-2  mx-auto">
                    <button class="btn btn-class">Register</button>
                </div>

                <div class="mt-3">
                    <a class = "btn-link" href="/">Login</a>
                </div>
                
            </form>
        </div>
        <div class="col-md-6 mb-3">
            <img src="img/register.png" alt="image" srcset="" class="img-fluid registerImg">

        </div>
    </div>
</div>